{
    "manifest_version": 3,
    //"$schema": "https://json.schemastore.org/chrome-manifest",
    "name": "LearnPlus",
    "description": "LearnPlus improves your learning experience by adding useful features to your favorite learning platforms.",
    "version": "0.0.1",
    // "icons": {
    //     "16": "icons/icon16.png",
    //     "48": "icons/icon48.png",
    //     "128": "icons/icon128.png",
    //     "256": "icons/icon256.png"
    // },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": [
                "lib/jquery.js",
                "lib/socket.io.min.js",
                "lib/misc.js",
                "src/content.js"
            ]
        },
        {
            "matches": ["https://app.educationperfect.com/*"],
            "js": ["src/pages/educationperfect.js"]
        }
    ],
    "action": {
        "default_title": "LearnPlus",
        "default_popup": "src/popup.html"
    }
}
